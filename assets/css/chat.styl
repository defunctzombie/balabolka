
.balabolka-window {
    width: 300px;
    border: 0;
    position: fixed;
    bottom: 0;
    left: 40px;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 13px;
    line-height: 18px;
    color: #333;

    .balabolka-title {
        border-radius: 3px 3px 0 0;
        background-color: #333;
        padding: 4px;
        font-size: 15px;
        color: white;
    }

    .balabolka-body {
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        background-color: white;
    }

    .balabolka-messages {
        height: 250px;
        overflow-y: auto;
    }

    .balabolka-message {
        padding: 2px;
    }

    hr {
        margin: 0;
        padding: 0;
        border: 0;
        border-top: 1px solid #EEE;
        border-bottom: 1px solid white;
    }

    form {
        padding: 0;
        margin: 0;
        border: 0;
    }

    input {
        border: 0;
        border-top: 1px solid #CCC;
        border-bottom: 1px solid #CCC;
        line-height: 18px;
        width: 100%;
        margin: 0;
        padding: 0;
        border-top: 1px solid #ddd;
        height: 22px;
        line-height: 22px;
        font-size: 15px;
    }
}

