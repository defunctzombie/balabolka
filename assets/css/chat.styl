
.balabolka-window {
    width: 300px;
    border: 0;
    position: fixed;
    bottom: 0;
    left: 40px;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 13px;
    line-height: 18px;
    color: #333;

    .balabolka-title {
        border-radius: 3px 3px 0 0;
        background-color: #333;
        padding: 4px;
        font-size: 15px;
        color: white;
        
        -webkit-transition: background-color 0.3s ease-in;
        -moz-transition: background-color 0.3s ease-in;
        -o-transition: background-color 0.3s ease-in;
        transition: background-color 0.3s ease-in;
    }
    
    .balabolka-title-blink {
        border-radius: 3px 3px 0 0;
        background-color: #CCC;
        -webkit-transition: background-color 0.3s ease-in;
        -moz-transition: background-color 0.3s ease-in;
        -o-transition: background-color 0.3s ease-in;
        transition: background-color 0.3s ease-in;
    }

    .balabolka-body {
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        background-color: white;
    }

    .balabolka-messages {
        height: 250px;
        overflow-y: auto;
    }

    .balabolka-message {
        padding: 2px;
    }
    
    .emoticon {
      width: 15px;
      height: 15px;
      vertical-align:top;
      display: inline-block;
      background-position-x: 0px;
      background-position-y: 0px;
    }
    
    .smile {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_smile.gif');
    }
    
    .wink {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_wink.gif');
    }
    
    .grin {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_biggrin.gif');
    }
    
    .eek {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_surprised.gif');
    }
    
    .shock {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_shock.gif');
    }
    
    .cool {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_cool.gif');
    }
    
    .mad {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_mad.gif');
    }
    
    .razz {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_razz.gif');
    }
    
    .neutral {
      background: no-repeat url('https://faq.wordpress.com/wp-includes/images/smilies/icon_neutral.gif');
    }    
    
    hr {
        margin: 0;
        padding: 0;
        border: 0;
        border-top: 1px solid #EEE;
        border-bottom: 1px solid white;
    }

    form {
        padding: 0;
        margin: 0;
        border: 0;
    }

    input {
        border: 0;
        border-top: 1px solid #CCC;
        border-bottom: 1px solid #CCC;
        line-height: 18px;
        width: 100%;
        margin: 0;
        padding: 0;
        border-top: 1px solid #ddd;
        height: 22px;
        line-height: 22px;
        font-size: 15px;
    }
}

